// Header container
.header {
  background-color: highlight-color;
  width: 100%;
}

// Menu
.menu {
  align-items: center;
  display: flex;
}

@media screen and (max-width: 400px) {
  .menu {
    justify-content: center;
    margin: 10px 0;
    order: 2;
    width: 100%;
  }
}

.menu-itens {
  display: inline-block;
  margin-bottom: 0;
  margin-top: 0;
  padding-left: 0;
}

.menu-itens__menu-item {
  display: inline-block;
  list-style: none;
}

.menu-link {
  color: #fff;
  display: inline-block;
  padding: 10px;
  text-decoration: none;
}

// Profile
.profile-header {
  margin-left: auto;
}

@media screen and (max-width: 400px) {
  .profile-header {
    margin: 10px 0;
    order: 1;
    text-align: center;
    width: 100%;
  }
}

.profile-header-img {
  border-radius: 50%;
  margin: 5px;
  vertical-align: middle;
}

.profile-header-text {
  color: #fff;
  display: inline-block;
  margin: 5px;
}
