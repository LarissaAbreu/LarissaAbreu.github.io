extends ./layouts/default.pug

block content
  div.container
    div.projects
      section.projects-list
        h1.heading-lv1 Projetos

        for project in projects
          article.project
            h2.project-name=project.name
            div.project-star
              include icons/star-icon.html
              span.projects-star-count=project.stars
            p.project-description=project.description
